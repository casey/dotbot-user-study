[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.zshrc": {
        "force": true,
        "path": "zshrc"
      },
      "~/.vimrc": {
        "force": true,
        "path": "vimrc"
      },
      "~/.gitconfig": {
        "force": true,
        "path": "gitconfig"
      },
      "~/.gitignore_global": {
        "force": true,
        "path": "gitignore_global"
      },
      "~/.oh-my-zsh": {
        "force": true,
        "path": "oh-my-zsh"
      }
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]