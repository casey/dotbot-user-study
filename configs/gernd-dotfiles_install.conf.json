[
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.vimrc": "vimrc",
            "~/.gitconfig": "gitconfig",
            "~/.bashrc": "bashrc",
            "~/.tmux.conf": "tmux.conf"
        }
    },
    {
        "shell": [
            ["git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim", "Setting up vundle"],
            ["vim +PluginInstall +qal", "Installing vim plugins managed by vundle"]
        ]
    }
]
